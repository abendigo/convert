{
  "entrypoint": "index.html",
  "sources": ["images/**/*"],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/**",
    "src/*.css"
  ],
  "builds": [
    {
      "name": "default",
      "browserCapabilities": ["es2015", "modules"],
      "js": {
        "minify": false
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      },
      "bundle": false,
      "addServiceWorker": true
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
